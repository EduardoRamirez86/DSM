<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Desafio 1 DSM"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/PromediodelEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Promedio del Estudiante" />

    <Button
        android:id="@+id/DescuentoAlSalario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Descuento al salario" />

    <Button
        android:id="@+id/CalculadoraBasica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Calculadora basica" />

</LinearLayout>