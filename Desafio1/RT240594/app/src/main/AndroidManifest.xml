<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.desafio_1__ejercicio1">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Desafio1Ejercicio1"
        tools:targetApi="31">

        <!-- Actividad Principal (Menú) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para Promedio del Estudiante -->
        <activity
            android:name=".StudentAverageActivity"
            android:label="Promedio del Estudiante"
            android:parentActivityName=".MainActivity">

        </activity>

        <!-- Actividad para Descuento al Salario -->
        <activity
            android:name=".SalaryDiscountActivity"
            android:label="Descuento al Salario"
            android:parentActivityName=".MainActivity">
        </activity>

        <!-- Actividad para Calculadora Básica -->
        <activity
            android:name=".BasicCalculatorActivity"
            android:label="Calculadora Básica"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>

